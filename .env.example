# Sysrai Platform Environment Variables
# Copy to .env and fill in your values

# Database (Digital Ocean PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/sysrai_db

# Redis (Digital Ocean Redis)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# RunPod API
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_SKYREELS_ENDPOINT=https://your-pod-id.runpod.io
RUNPOD_POD_ID=your_pod_id

# Digital Ocean Spaces (S3-compatible storage)
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_BUCKET=sysrai-videos
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Application Settings
APP_NAME=Sysrai
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
FRONTEND_URL=https://sysrai.ai
API_PREFIX=/api/v1

# Email (SendGrid/Mailgun/etc)
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@sysrai.ai

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn

# Admin
ADMIN_EMAIL=admin@sysrai.ai
ADMIN_PASSWORD=change_this_password